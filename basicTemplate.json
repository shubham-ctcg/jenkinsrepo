{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Basic template Test 1",
	"Parameters": {
		"UserKeys": {
			"Type": "AWS::EC2::KeyPair::KeyName",
			"Description": "SSH PEM key name."
		},
		"AmiID": {
			"Type": "String",
			"Description": "AMI ID for the talend instances."
		},
		"SubnetID": {
            "Description": "ID of the public subnet 1 that you want to provision the first bastion into (e.g., subnet-a0246dcd)",
            "Type": "AWS::EC2::Subnet::Id"
        }
	},
	"Resources": {
		"cbServer": {
			"Type": "AWS::EC2::Instance",
			"DependsOn": "InstanceSecurityGroup",
			"Properties": {
				"ImageId": { "Ref": "AmiID" },
				"InstanceType": "t2.micro",
				"SecurityGroupIds": [{
					"Fn::GetAtt": ["InstanceSecurityGroup",
					"GroupId"]
				}],
				"SubnetId": { "Ref": "SubnetID" },
				"KeyName": { "Ref": "UserKeys" }
			}
		},
		"InstanceSecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"GroupDescription": "Security group for our cloudbreak instance.",
				"VpcId": "vpc-4f348435",
				"SecurityGroupIngress": [{
					"IpProtocol": "tcp",
					"FromPort": "22",
					"ToPort": "22",
					"CidrIp": "0.0.0.0/0"
				},
				{
					"IpProtocol": "tcp",
					"FromPort": "443",
					"ToPort": "443",
					"CidrIp": "0.0.0.0/0"
				}]
			}
		}
	}
}
